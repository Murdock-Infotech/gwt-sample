{
    "terminal.integrated.profiles.windows": {
      "Git Bash": {
        "path": "bash.exe",
        "args": [
          "--login",
          "-i"
        ]
      }
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // Cursor/VS Code uses a separate “automation” terminal for tasks/debug adapters.
    // Use Git Bash if available on PATH (no machine-specific install path).
    "terminal.integrated.automationProfile.windows": {
      "path": "bash.exe",
      "args": [
        "--login",
        "-i"
      ]
    },
    "java.compile.nullAnalysis.mode": "disabled"
  }